<Window x:Class="P2PChatProj.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:P2PChatProj"
        xmlns:views="clr-namespace:P2PChatProj.Views"
        xmlns:viewmodels="clr-namespace:P2PChatProj.ViewModels"
        mc:Ignorable="d"
        Title="P2P Chat" Height="700" Width="1000" FontSize="18">

    <Window.Resources>

        <DataTemplate x:Name="userConnectTemplate" DataType="{x:Type viewmodels:OfflineViewModel}">
            <views:UserConnectView DataContext="{Binding}" />
        </DataTemplate>

        <DataTemplate x:Name="userOnlineTemplate" DataType="{x:Type viewmodels:OnlineViewModel}">
            <views:UserOnlineView DataContext="{Binding}" />
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding}"></ContentControl>
    </Grid>
</Window>
